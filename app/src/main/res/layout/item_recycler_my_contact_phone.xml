<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <!--我的联系电话item-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_8dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            style="@style/tv_title_style"
            android:text="@string/txt_register_phone_number"/>

        <include layout="@layout/layout_dashed_line_horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8dp">

            <TextView
                android:id="@+id/tv_phone_number"
                style="@style/tv_subtitle_style"
                android:layout_width="wrap_content"
                android:text="@string/amount_0.00"/>


            <TextView
                style="@style/tv_subtitle_style"
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_8dp"
                android:text="@string/txt_not_modify"
                android:textSize="@dimen/font_12"
                android:visibility="gone"/>

            <LinearLayout
                android:id="@+id/ll_edit_and_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_edit"
                    style="@style/tv_title_style"
                    android:drawableLeft="@drawable/ic_edit"
                    android:gravity="center"
                    android:text="@string/txt_edit"
                    android:textColor="@color/txt_btn_title_selector"
                    android:textSize="@dimen/font_12"/>

                <TextView
                    android:id="@+id/tv_delete"
                    style="@style/tv_title_style"
                    android:drawableLeft="@drawable/ic_delete"
                    android:gravity="center"
                    android:text="@string/txt_delete"
                    android:textColor="@color/txt_btn_title_selector"
                    android:textSize="@dimen/font_12"/>

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</layout>