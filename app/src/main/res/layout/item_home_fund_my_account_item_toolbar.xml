<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="homeMyAccountFragment"
            type="com.kscf.app.android.ui.fragment.HomeMyAccountFragment"/>
    </data>

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundBlue2"
        android:paddingBottom="@dimen/size_38dp"
        android:paddingLeft="@dimen/size_12dp"
        android:paddingTop="@dimen/size_12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.kscf.app.android.widget.MLImageView
                    android:id="@+id/iv_icon_head"
                    android:layout_width="@dimen/size_32dp"
                    android:layout_height="@dimen/size_32dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tabhost_my_account_normal"
                    app:ml_border_width="@dimen/size_1dp"
                    app:ml_shape_type="round"/>

                <TextView
                    android:layout_alignBottom="@id/iv_icon_head"
                    android:layout_centerHorizontal="true"
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="*张"
                    android:textColor="@color/white"
                    android:textSize="@dimen/font_18"/>

                <!--<ImageView
                    android:id="@+id/iv_toolbar_right"
                    android:layout_width="@dimen/size_28dp"
                    android:layout_height="@dimen/size_28dp"
                    android:background="@drawable/tabhost_my_account_normal"
                    android:scaleType="fitCenter"/>-->

            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_12dp"
                android:gravity="center"
                android:text="当前资产(元)"
                android:textColor="@color/white"/>

            <TextView
                android:id="@+id/tv_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0.00"
                android:textColor="@color/white"
                android:textSize="@dimen/font_34"/>

            <!--<TextView
                android:id="@+id/tv_past_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_16dp"
                android:gravity="center"
                android:text="昨日收益0.00元"
                android:textColor="@color/white"/>-->
        </LinearLayout>


    </android.support.v7.widget.Toolbar>
</layout>