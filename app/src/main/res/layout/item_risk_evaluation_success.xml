<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:id="@+id/root_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_42dp"
                android:src="@drawable/risk_evaluation_conservative"/>

            <TextView
                android:id="@+id/tv_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_28dp"
                android:maxLines="1"
                android:text="您是一位保守型投资者"
                android:textColor="@color/txt_title_color"
                android:textSize="@dimen/font_14"/>

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_18dp"
                android:maxLines="1"
                android:text="保守型"
                android:textColor="@color/txt_title_color"
                android:textSize="@dimen/font_28"/>

            <TextView
                android:id="@+id/tv_des2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/size_18dp"
                android:layout_marginTop="@dimen/size_18dp"
                android:maxLines="1"
                android:text="可投资中低、低风险的基金"
                android:textColor="@color/txt_title_color"
                android:textSize="@dimen/font_14"/>
        </LinearLayout>

        <View
            android:layout_width="@dimen/size_1dp"
            android:layout_height="@dimen/size_0dp"
            android:layout_weight="2"/>


        <Button
            android:id="@+id/btn_confirm"
            style="@style/btn_round_back_yellow_style"
            android:background="@drawable/item_radius_btn_yellow_selector"
            android:text="@string/txt_reset_repeat"/>

        <View
            android:layout_width="@dimen/size_1dp"
            android:layout_height="@dimen/size_0dp"
            android:layout_weight="8"/>
    </LinearLayout>
</layout>