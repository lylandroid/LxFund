<?xml version="1.0" encoding="utf-8"?>
<!--快速开户步骤-->
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:padding="@dimen/size_18dp">

        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_bind_card"
                android:layout_width="@dimen/size_58dp"
                android:layout_height="@dimen/size_58dp"
                android:background="@drawable/item_quick_account_bind_card_selector"/>

            <ImageView
                android:id="@+id/iv_bind_card_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/item_quick_account_bind_card_line_selector"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/tv_setting_password"
                android:layout_width="@dimen/size_58dp"
                android:layout_height="@dimen/size_58dp"
                android:background="@drawable/item_quick_account_setting_password_selector"/>

            <ImageView
                android:id="@+id/tv_setting_password_line"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_1dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/item_quick_account_setting_password_line_selector"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/tv_evaluation"
            android:layout_width="@dimen/size_58dp"
            android:layout_height="@dimen/size_58dp"
            android:background="@drawable/item_quick_account_evaluation_selector"/>
    </LinearLayout>
</layout>