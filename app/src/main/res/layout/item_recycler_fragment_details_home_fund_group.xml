<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/tv_subtitle_style"
            android:layout_width="@dimen/size_0dp"
            android:layout_weight="2"
            android:background="@drawable/item_border_recycler_grid_selector"
            android:paddingLeft="@dimen/size_0dp"
            android:text="@string/txt_invest_fund"/>

        <TextView
            style="@style/tv_subtitle_style"
            android:layout_width="@dimen/size_0dp"
            android:layout_weight="1"
            android:background="@drawable/item_border_recycler_grid_selector"
            android:lines="1"
            android:paddingLeft="@dimen/size_0dp"
            android:text="@string/txt_allocation_proportion"/>

        <TextView
            style="@style/tv_subtitle_style"
            android:layout_width="@dimen/size_0dp"
            android:layout_weight="1"
            android:background="@drawable/item_border_recycler_grid_selector"
            android:lines="1"
            android:paddingLeft="@dimen/size_0dp"
            android:text="@string/txt_fund_type"/>

        <LinearLayout
            android:layout_width="@dimen/size_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/item_border_recycler_grid_selector"
            android:gravity="center">

            <com.framework.view.DeleteLineTextView
                style="@style/tv_subtitle_style"
                android:layout_width="wrap_content"
                android:text="@string/amount_0.00"/>

            <TextView
                android:layout_marginLeft="@dimen/size_6dp"
                style="@style/tv_subtitle_style"
                android:layout_width="wrap_content"
                android:paddingLeft="@dimen/size_0dp"
                android:text="@string/txt_subscription_fee"/>

        </LinearLayout>
    </LinearLayout>
</layout>