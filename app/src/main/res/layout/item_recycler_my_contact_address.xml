<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools">
    <!--我的联系电话item-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/size_8dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_address"
            style="@style/tv_title_style"
            android:text="简洁地址"/>

        <TextView
            android:id="@+id/tv_details_address"
            style="@style/tv_title_style"
            android:paddingTop="@dimen/size_0dp"
            android:text="详细地址"/>

        <include layout="@layout/layout_dashed_line_horizontal"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/size_8dp">

            <CheckBox
                android:id="@+id/cb_is_def"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/size_8dp"
                android:button="@drawable/item_checkbox_group"
                android:paddingLeft="@dimen/size_6dp"
                android:text="@string/txt_setting_def"
                android:textColor="@color/txt_btn_subtitle_selector"
                android:textSize="@dimen/font_12"/>


            <LinearLayout
                android:id="@+id/ll_edit_and_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/size_8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_edit"
                    style="@style/tv_title_style"
                    android:drawableLeft="@drawable/ic_edit"
                    android:gravity="center"
                    android:text="@string/txt_edit"
                    android:textColor="@color/txt_btn_title_selector"
                    android:textSize="@dimen/font_12"/>

                <TextView
                    android:id="@+id/tv_delete"
                    style="@style/tv_title_style"
                    android:drawableLeft="@drawable/ic_delete"
                    android:gravity="center"
                    android:text="@string/txt_delete"
                    android:textColor="@color/txt_btn_title_selector"
                    android:textSize="@dimen/font_12"/>

            </LinearLayout>
        </RelativeLayout>


    </LinearLayout>

</layout>