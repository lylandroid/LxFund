<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:id="@+id/root_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundRed"
        android:paddingBottom="@dimen/size_3dp"
        android:paddingTop="@dimen/size_3dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/size_32dp"
            android:layout_height="@dimen/size_32dp"
            android:layout_margin="@dimen/size_6dp"
            android:padding="@dimen/size_8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_return"/>

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_back"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/font_18"/>


        <ImageView
            android:id="@+id/iv_toolbar_right"
            android:layout_width="@dimen/size_20dp"
            android:layout_height="@dimen/size_20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/size_10dp"
            android:layout_marginRight="@dimen/size_16dp"
            android:src="@drawable/icon_share"/>


    </RelativeLayout>
</layout>