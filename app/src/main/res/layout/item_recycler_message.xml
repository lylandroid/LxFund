<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardBackgroundColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size_8dp"
        app:cardCornerRadius="@dimen/size_3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_12dp"
            android:orientation="vertical">

            <TextView
                android:id="@id/tv_title"
                android:lineSpacingMultiplier="1.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/txt_test_title"
                android:textColor="@color/txt_title_color"
                android:textSize="@dimen/font_16"/>

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8dp"
                android:text="@string/txt_test_date"
                android:textColor="@color/txt_subtitle_color"
                android:textSize="@dimen/font_16"/>

            <TextView
                android:lineSpacingMultiplier="1.3"
                android:id="@id/tv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/size_8dp"
                android:text="@string/txt_test_content"
                android:layout_marginBottom="@dimen/size_12dp"
                android:textColor="@color/txt_title_color"
                android:textSize="@dimen/font_16"/>

            <RelativeLayout
                android:id="@id/item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:id="@id/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_1dp"
                    android:background="@color/line_dialog_color4"/>

                <com.kscf.app.android.widget.ItemLeftTxtRightArrowLayout
                    android:layout_below="@id/line"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/size_52dp"
                    app:leftText="@string/txt_view_details"/>
            </RelativeLayout>

        </LinearLayout>


    </android.support.v7.widget.CardView>

</layout>