<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_18dp">

        <!--<com.bigkoo.convenientbanner.ConvenientBanner
            android:id="@+id/convenientBanner"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_180dp"
            app:canLoop="true"/>-->
        <ImageView
            android:id="@+id/iv_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/index_banner"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="灵活配置"
                android:textSize="@dimen/font_16"/>

            <View
                android:layout_width="@dimen/size_1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/size_8dp"
                android:layout_marginRight="@dimen/size_8dp"
                android:background="@color/txt_title_color"
                android:textSize="@dimen/font_16"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="凯石股债六四积极"
                android:textSize="@dimen/font_16"/>

        </LinearLayout>

        <com.kscf.app.android.widget.PercentageTextView
            android:id="@+id/tv_percentage_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="19.09%"/>

        <include layout="@layout/item_home_fund_selected_linearlayout"/>

        <Button
            android:id="@+id/btn_confirm"
            style="@style/btn_round_back_yellow_style"
            android:layout_marginBottom="@dimen/size_12dp"
            android:layout_marginLeft="@dimen/size_28dp"
            android:layout_marginRight="@dimen/size_28dp"
            android:layout_marginTop="@dimen/size_12dp"
            android:background="@drawable/item_radius_btn_red_selector"
            android:text="@string/btn_txt_buy_now"/>
    </LinearLayout>

</layout>