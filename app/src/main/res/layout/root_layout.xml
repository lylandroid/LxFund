<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true">

    <FrameLayout
        android:id="@id/control_success"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <ViewStub
        android:id="@+id/item_err_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/item_err"/>

    <ViewStub
        android:id="@+id/item_err_404_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/item_err_404"/>

    <ViewStub
        android:id="@+id/item_loading_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout="@layout/item_loading"/>


    <!-- <include layout="@layout/item_err"/>

     <include layout="@layout/item_err_404"/>

     <include layout="@layout/item_loading"/>-->

</FrameLayout>