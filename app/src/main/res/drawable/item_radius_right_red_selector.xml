<?xml version="1.0" encoding="utf-8"?>
<!--button按钮 圆角选择器-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <corners android:bottomRightRadius="@dimen/size_18dp" android:topRightRadius="@dimen/size_18dp"/>
            <solid android:color="@color/colorBackgroundRed2"/>
            <stroke android:width="@dimen/size_1dp" android:color="@color/colorBackgroundRed2"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!--<corners android:radius="@dimen/size_24dp"/>-->
            <corners android:bottomRightRadius="@dimen/size_18dp" android:topRightRadius="@dimen/size_18dp"/>
            <solid android:color="@color/colorDeepRed"/>
            <stroke android:width="@dimen/size_1dp" android:color="@color/colorDeepRed"/>
        </shape>
    </item>
</selector>