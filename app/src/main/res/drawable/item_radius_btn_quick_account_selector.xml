<?xml version="1.0" encoding="utf-8"?>
<!--button按钮 圆角选择器-->
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">

        <shape android:shape="rectangle">
            <corners android:radius="@dimen/size_24dp"/>
            <solid android:color="@color/blue"/>
            <stroke android:width="@dimen/size_1dp" android:color="@color/blue"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/size_24dp"/>
            <solid android:color="@color/line_dialog_color"/>
            <stroke android:width="@dimen/size_1dp" android:color="@color/line_dialog_color"/>
        </shape>
    </item>
</selector>